{
  "name": "next-stitches-typescript-boilerplate",
  "version": "0.0.2",
  "description": "A next boilerplate with stitches for styling and batteries included setup from tests to releases.",
  "scripts": {
    "build": "next build",
    "prepare": "husky install",
    "deploy": "yarn build && yarn export",
    "dev": "next dev",
    "export": "next export",
    "lint-staged": "lint-staged",
    "lint": "next lint",
    "postbuild": "next-sitemap --config next-sitemap-config.js",
    "test:e2e": "playwright test",
    "start": "next start",
    "test": "jest",
    "commit": "cz",
    "release": "standard-version --no-verify",
    "release:patch": "standard-version --no-verify --release-as patch"
  },
  "keywords": [
    "next",
    "stitches",
    "typescript"
  ],
  "author": "Franrey Anthony S. Saycon",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^2.9.8",
    "@netlify/functions": "^1.2.0",
    "@radix-ui/react-accordion": "^1.0.0",
    "@radix-ui/react-icons": "^1.1.1",
    "@radix-ui/react-label": "^1.0.0",
    "@radix-ui/react-toast": "^1.0.0",
    "@stitches/react": "^1.2.8",
    "@types/react-dom": "^18.0.6",
    "axios": "^0.27.2",
    "axios-case-converter": "^0.9.0",
    "camelcase-keys": "^8.0.2",
    "framer-motion": "^7.3.6",
    "joi": "^17.6.2",
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-components-form": "^4.0.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.36.1",
    "react-query": "^3.39.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@commitlint/cz-commitlint": "^17.2.0",
    "@playwright/test": "^1.27.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "18.7.20",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "commitizen": "^4.2.5",
    "eslint": "8.24.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.27.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.3",
    "msw": "^0.47.3",
    "next-sitemap": "^3.1.22",
    "prettier": "^2.4.1",
    "standard-version": "^9.5.0",
    "typescript": "^4.8.3"
  }
}
